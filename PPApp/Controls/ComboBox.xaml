<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPApp.Controls.ComboBox">

    <VerticalStackLayout x:Name="RootLayout" Spacing="0">

        <!-- Selected Item / Input Box -->
        <Border x:Name="SelectedItemBorder"
                Stroke="#888"
                StrokeThickness="1"
                BackgroundColor="White"
                Padding="10">

            <Entry x:Name="InputEntry"
                   Placeholder="Select..."
                   FontSize="16"
                   TextChanged="OnInputTextChanged" />
        </Border>

        <!-- Dropdown wrapped in Border, named Dropdown -->
        <Border x:Name="Dropdown"
                Stroke="#888"
                StrokeThickness="1"
                BackgroundColor="White"
                IsVisible="False">

            <ScrollView HeightRequest="150">
                <VerticalStackLayout x:Name="ItemsContainer" />
            </ScrollView>

        </Border>

    </VerticalStackLayout>
</ContentView>
