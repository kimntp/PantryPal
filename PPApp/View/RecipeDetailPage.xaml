<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Model="clr-namespace:PPApp.Model"
             x:Class="PPApp.View.RecipeDetailPage"
             x:DataType="Model:Recipe"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="16"
                             Spacing="12">

            <Image Source="{Binding DisplayImage}"
                   HeightRequest="220"
                   Aspect="AspectFill"
                   Margin="0,0,0,8" />

            <Label Text="{Binding DisplayName}"
                   FontSize="22"
                   FontAttributes="Bold"
                   LineBreakMode="WordWrap" />

            <HorizontalStackLayout Spacing="4"
                                   Margin="0,0,0,4">

                <Border IsVisible="{Binding ContainsGluten}"
                        BackgroundColor="#FFE0B2"
                        Stroke="#FFB74D"
                        StrokeThickness="1"
                        Padding="6,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Label Text="Gluten"
                           FontSize="11" />
                </Border>

                <Border IsVisible="{Binding IsVegetarian}"
                        BackgroundColor="#C8E6C9"
                        Stroke="#81C784"
                        StrokeThickness="1"
                        Padding="6,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Label Text="Vegetarian"
                           FontSize="11" />
                </Border>
            </HorizontalStackLayout>

            <Label Text="{Binding Url}"
                   FontSize="12"
                   TextColor="Blue"
                   LineBreakMode="MiddleTruncation">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnUrlTapped" />
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Ingredients:"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,8,0,0" />

            <CollectionView ItemsSource="{Binding CleanIngredients}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <HorizontalStackLayout Padding="0,2">
                            <Label Text="â€¢"
                                   FontSize="14"
                                   Margin="0,0,4,0" />
                            <Label Text="{Binding .}"
                                   FontSize="14"
                                   LineBreakMode="WordWrap" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Close button -->
            <Button Text="Close"
                    Margin="0,16,0,0"
                    Clicked="OnCloseClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
