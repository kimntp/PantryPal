<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPApp.View.ProfilePage"
             Title="Profile">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="User Profile" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" />
        <Label x:Name="displayNameLabel" Text="Name: -" />
        <Label x:Name="emailLabel" Text="Email: -" />
        
        <Label Text="My Recipes" FontAttributes="Bold" FontSize="16" Margin="0,20,0,10" />
        <ListView x:Name="listRecipes" 
            BackgroundColor="Transparent"
            
            ItemTapped="OnRecipe_Tapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Bind to Recipe.Name -->
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnSignOut" Text="Sign Out" Clicked="OnSignOutClicked" />
    </VerticalStackLayout>

</ContentPage>
