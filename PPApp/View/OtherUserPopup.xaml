<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPApp.View.OtherUserPopup"
             Title="User Profile">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Label x:Name="displayNameLabel" FontAttributes="Bold" FontSize="20"/>
        <Button x:Name="followButton" Clicked="OnFollowButtonClicked"/>
        <Button Text="Cancel" Clicked="OnCancelClicked"/>

        <Label Text="Public Ratings" FontAttributes="Bold" FontSize="16" Margin="0,20,0,10"/>
        <CollectionView x:Name="ratingsCollectionView" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" Spacing="5" BackgroundColor="White">
                        <Label Text="{Binding RecipeName}" FontSize="14"/>
                        <Label Text="{Binding StarsDisplay}" FontSize="20" TextColor="#f5a623"/>
                        <Label Text="{Binding Review}" FontSize="14"/>
                        <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}" FontSize="12" TextColor="#777"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
